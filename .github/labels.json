[
    {
        "name": "chore",
        "color": "#130f40",
        "description": "Updating configuration files",
        "patterns": [
            ".*/**/*",
            "Itermocil.yml",
            "*.code-workspace"
        ]
    },
    {
        "name": "devops",
        "color": "#30336b",
        "description": "Devops changes",
        "patterns": [
            "devops/**/*"
        ]
    },
    {
        "name": "dependencies",
        "color": "#0652DD",
        "description": "Update to dependency files"
    },
    {
        "name": "server",
        "color": "#FDA7DF",
        "description": "Updates to server code",
        "patterns": [
            "server/**/*"
        ],
        "comments": {
            "combinedWith": "client",
            "text": ["You have modified server and client code. Please make sure to request a review from a front- and back-ender"]
        }
    },
    {
        "name": "client",
        "color": "#A3CB38",
        "description": "Updates to client code",
        "patterns": [
            "client/**/*"
        ]
    },
    {
        "name": "core",
        "color": "#000000",
        "description": "Updating core files",
        "patterns": [
            "server/src/framework/Core/*",
            "server/src/framework/Core/**/*",
            "client/src/components/Core/**/*"
        ],
        "comments": {
            "text": ["You have modified a core component. Please create an issue and/or PR on the [boilerplate](https://github.com/lifelynl/boilerplate)"]
        }
    },
    {
        "name": "kitchensink",
        "color": "#333333",
        "description": "Updates in the kitchensink"
    },
    {
        "name": "i18n",
        "color": "#FFC312",
        "description": "Changes to locales",
        "patterns": [
            "client/src/locales/**/*"
        ],
        "comments": {
            "text": ["You have updated i18n locales. Please make sure this PR only has these updates"]
        }
    },
    {
        "name": "technical debt",
        "color": "#F79F1F",
        "description": "Something is broken"
    },
    {
        "name": "bug",
        "color": "#EE5A24",
        "description": "Something is broken"
    },
    {
        "name": "security",
        "color": "#EA2027",
        "description": "Related to security vulnerabilities"
    },
    {
        "name": "wontfix",
        "color": "#FFFFFF",
        "description": "This will not be worked on"
    },
    {
        "name": "enhancement",
        "color": "#12CBC4",
        "description": "New feature or request"
	}
]